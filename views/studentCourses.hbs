<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
    <link rel="stylesheet" href="css/studentCourses.css">
</head>
<body>
    <div class="content" id="main-container">
        <nav>
            <div class="logo">
                <a href="/">
                    <img src="images/logo.png" alt="Logo">
                </a>
            </div>
            <ul>
                <li><a href="/home">Home</a></li>
                <li><a href="/dashboard">Dashboard</a></a></li>
                <li><a href="/course">Courses</a></li>
            </ul>
            <div class="user-profile">
                <div class="user-initials">{{userInitials}}</div>
            </div>
            
          </nav>

        <section id="welcome-section">
            <div class="welcome-text">Hello Student!</div>
        </section>

        <section id="search-section">
            <div class="search-box">
                <input type="search" id="search" placeholder="What do you want to learn">
            </div>
            <div class="search-background">
                <img class="search-icon" src="images/search-icon.png"></div>
            </div>
        </section>

        <aside id="filter-sidebar">
            <div class="filter-background">
                <div class="filter-title">Filter By</div>

                <!-- College Filter -->
                <div class="filter-item">College</div>
                <div class="filter-item">
                    <div id="college-filters">
                        <div class="filter-item">
                            <input type="checkbox" id="filter-usha-mittal" class="filter-checkbox" data-filter="college" value="Usha Mittal Institute of Technology">
                            <label for="filter-usha-mittal" class="filter-text">Usha Mittal Institute of Technology</label>
                        </div>
                        <div class="filter-item">
                            <input type="checkbox" id="filter-jankidevi" class="filter-checkbox" data-filter="college" value="Jankidevi Bajaj Institute of Management Studies">
                            <label for="filter-jankidevi" class="filter-text">Jankidevi Bajaj Institute of Management Studies</label>
                        </div>
                        <div class="filter-item">
                            <input type="checkbox" id="filter-vithaldas" class="filter-checkbox" data-filter="college" value="Sir Vithaldas Thakersey College of Home Science">
                            <label for="filter-vithaldas" class="filter-text">Sir Vithaldas Thakersey College of Home Science</label>
                        </div>
                    </div>
                </div>

                <!-- Mode Filter -->
                <div class="filter-item">Mode</div>
                <div class="filter-item">
                    <div id="mode-filters">
                        <div class="filter-item">
                            <input type="checkbox" id="filter-online" class="filter-checkbox" data-filter="mode" value="online">
                            <label for="filter-online" class="filter-text">Online</label>
                        </div>
                        <div class="filter-item">
                            <input type="checkbox" id="filter-offline" class="filter-checkbox" data-filter="mode" value="offline">
                            <label for="filter-offline" class="filter-text">Offline</label>
                        </div>
                    </div>
                </div>
            </div>
        </aside>

        <!-- Course Cards -->
        <section class="courses">
            <div class="course-cards">
                {{#each courses}}
                <div class="card course-card" data-college="{{this.collegeName}}" data-mode="{{this.mode}}">
                    <a href="/course/{{this._id}}">
                        <img src="{{this.image}}" alt="{{this.courseName}}" class="card-image"/>
                        <div class="card-details">
                            <div class="course-name">{{this.courseName}}</div>
                            <div class="course-type">Mode: {{this.mode}}</div>
                            <div class="course-credits">Credits: {{this.credits}}</div>
                        </div>
                    </a>
                </div>
                {{/each}}
            </div>
        </section>


    </div>

