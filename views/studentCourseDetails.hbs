<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{courseName}}</title>
    <link rel="stylesheet" href="/css/courseDetails.css"> 
</head>
<body>
    <div class="container">
        <nav>
            <div class="logo">
                <img src="/images/logo.png" alt="Logo">
            </div>
            <ul>
                <li><a href="/home">Home</a></li>
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/course">Courses</a></li>
            </ul>
            <div class="user-profile">
                <div class="user-initials">{{userInitials}}</div>
            </div>
        </nav>
        <section class="course-overview">
            <h1 class="course-title">{{courseName}}</h1>
            {{!-- <img src="{{image}}" alt="{{courseName}}" class="course-image"> --}}
            <div class="course-details">
                <p class="description">{{courseDescription}}</p>
                <p class="info">
                    <strong>Credits:</strong> {{credits}} points<br>
                    <strong>Duration:</strong> {{duration}} hours<br>
                    <strong>Mode:</strong> {{mode}}<br>
                    <strong>College:</strong> {{collegeName}}<br>
                    <strong>Faculty:</strong> {{facultyName}}<br>
                </p>
                <p class="info">
                    <strong>Modules:</strong>
                    <ul>
                        {{#each modules}}
                            <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </p>
                <form action="/enroll" method="POST">
                    <input type="hidden" name="courseId" value="{{_id}}"> <!-- Ensure this exists -->
                    <input type="hidden" name="courseName" value="{{courseName}}">
                    <input type="hidden" name="collegeName" value="{{collegeName}}">
                    <button type="submit" class="enroll-btn">Register Now</button>
                </form>
            </div>
        </section>
    </div>
</body>
</html>
