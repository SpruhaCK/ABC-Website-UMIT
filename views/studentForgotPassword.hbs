<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Forget Password</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding: 20px;
    }
    form {
      display: inline-block;
      text-align: left;
      max-width: 300px;
      margin: auto;
    }
    input, button {
      display: block;
      width: 100%;
      margin: 10px 0;
      padding: 8px;
    }
    #confirmationMessage {
      color: green;
      display: none;
    }
    #errorMessage {
      color: red;
      display: none;
    }
  </style>
</head>
<body>
  <h1>Forget Password</h1>
  <form action="/forget-password" method="POST">
    <label for="prnNumber">Enter Your PRN Number:</label>
    <input type="text" id="prnNumber" name="prnNumber" placeholder="Enter PRN Number" required>
    <button type="submit">Send Reset Email</button>
  </form>
  <script>
    // Function to validate the form input
    function validateForm() {
      const prnNumber = document.getElementById("prnNumber").value;
      const errorMessage = document.getElementById("errorMessage");
      const confirmationMessage = document.getElementById("confirmationMessage");

      // Simple validation to check if PRN number is not empty
      if (prnNumber.trim() === "") {
        errorMessage.style.display = "block";
        return false; // Prevent form submission
      } else {
        errorMessage.style.display = "none";
      }

      // Simulate a successful submission (for demo purposes)
      confirmationMessage.style.display = "block";

      return true; // Allow form submission
    }
  </script>
</body>
</html>
